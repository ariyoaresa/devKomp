{
  "compilerOptions": {
    "jsx": "react-jsx", // Enable JSX support for React (if React 17+)
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
